<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">Out of Range Shifts</h3>
    </div>
    <table class="table table-hover">
      <tr>
        <th>Shift ID</th>
        <th>Date</th>
        <th>Client Name </th>
        <th>Client Phone Number</th>
        <th>Worker Name</th>
        <th>Worker Phone Number</th>
        <th class ="alert-icon-header">Dismiss?</th>
      </tr>
      <% @bad_shifts.each do |shift| %>
      <% client = CarePair.find(shift.care_pair_id).client%>
      <% worker = CarePair.find(shift.care_pair_id).worker%>
      <tr>
        <td class="grab_shift_id"><%= shift.id %></td>
        <td><strong><%= shift.created_at %><strong></td>
          <td><%= client.first_name + ' ' + client.last_name %></td>
          <td><%= client.primary_phone %></td>
          <td><%= worker.first_name + ' ' + worker.last_name %></td>
          <td><%= worker.primary_phone %></td>
          <td class ="alert-icon">
            <span class="glyphicon glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
          </td>
      </tr>
        <% end %>
    </table>
  </div>
</div>
