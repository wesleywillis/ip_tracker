<div class="col-md-8 col-md-offset-2">

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Client Name: <%= @client.first_name + " " + @client.last_name %></h3>
  </div>
  <ul class="list-group">
    <li class="list-group-item">ID Number: <%= @client.id %></li>
    <li class="list-group-item">Phone Number: <%= @client.primary_phone %></li>
    <li class="list-group-item">Address: <%= @client.address.split.map(&:capitalize).join(' ') %></li>
    <li class="list-group-item">City: <%= @client.city.capitalize %></li>
    <li class="list-group-item">State: <%= @client.state.upcase %></li>
    <li class="list-group-item">Maximum Monthly Service Hours: <%= (@client.max_monthly_minutes)/60.0 %></li>
    <li class="list-group-item"><%= link_to "Edit Client", edit_district_client_path(@district, @client.id), class: "btn btn-primary" %></li>
  </ul>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Client's Workers</h3>
  </div>
  <table class="table table-hover">
  <tr>
    <th> ID # </th>
    <th> First Name </th>
    <th> Last Name </th>
    <th> Phone Number </th>
    <th> More Details... </th>
  </tr>
  <% @client.workers.each do |worker| %>
    <tr>
      <td><strong><%= worker.id %><strong></td>
      <td><%= worker.first_name %></td>
      <td><%= worker.last_name %></td>
      <td><%= worker.primary_phone %></td>
      <td><%= link_to '<i class="fa fa-info-circle fa-2x"></i>'.html_safe, district_worker_path(params[:district_id], worker)%></td>
    </tr>
  <% end %>
  </table>
</div>
</div>
